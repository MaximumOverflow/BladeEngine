<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="BladeEngine.Editor.UI.Console">
    <Grid RowDefinitions="*, Auto">
        <ScrollViewer Grid.Row="0" Name="Scroll">
            <TextBlock Name="Text" VerticalAlignment="Bottom"/>
        </ScrollViewer>
        
        <!-- <TextBox Name="Command" Watermark=" enter a command" KeyDown="InputElement_OnKeyDown"/> -->
        <AutoCompleteBox Grid.Row="1" Name="Command" Watermark=" enter a command" 
            KeyDown="InputElement_OnKeyDown"/>
    </Grid>
    
    <UserControl.Styles>
        <Style Selector="AutoCompleteBox">
            <Setter Property="Background" Value="#202020"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>
        
        <Style Selector="TextBlock#Text">
            <Setter Property="Padding" Value="13, 0, 0, 8"/>
        </Style>
    </UserControl.Styles>
</UserControl>
