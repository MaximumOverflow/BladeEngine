<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="600" d:DesignHeight="500"
             x:Class="BladeEngine.Editor.UI.TaskViewer">
    <Grid RowDefinitions="Auto, *, Auto">
        <ScrollViewer Grid.Row="0">
            <StackPanel Name="Tasks"/>
        </ScrollViewer>
        
        <StackPanel Grid.Row="2" Orientation="Horizontal"  Spacing="16" Margin="16" HorizontalAlignment="Right">
            <Button VerticalAlignment="Bottom" Click="Clear">Clear</Button>
        </StackPanel>
    </Grid>
</UserControl>
